generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(uuid())
  title     String
  sku       String   @unique
  slug      String   @unique
  price     Float
  pictures  String[]
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  description     Description   @relation(fields: [descriptionId], references: [id])
  descriptionId   String        @unique
  productDetail   ProductDetail @relation(fields: [productDetailId], references: [id])
  productDetailId String        @unique
}

model Description {
  id                String @id @default(uuid())
  description_short String
  description_long  String

  product Product?
}

model ProductDetail {
  id           String @id @default(uuid())
  category     String
  manufacturer String
  hotness      Float
  weight       Float

  product  Product?
  rating   Rating   @relation(fields: [ratingId], references: [id])
  ratingId String   @unique
}

model Rating {
  id            String @id @default(uuid())
  average       Float
  nr_of_reviews Int

  ProductDetails ProductDetail?
}
